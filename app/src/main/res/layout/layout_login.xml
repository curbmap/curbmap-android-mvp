<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_login"
    style="@style/Local.Curbmap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_centerVertical="true"
    android:layout_gravity="top"
    android:layout_margin="30dp"
    android:background="@color/primary_background"
    android:orientation="vertical"
    android:paddingBottom="30dp">

    <!--
    <Button
        android:id="@+id/layout_login_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/login_button_back"

    />
-->

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/layout_login_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/login_heading_text"
        android:textAlignment="center"
        android:textColor="@color/primary_text_color"
        android:textSize="15pt"
        android:visibility="visible" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/layout_login_username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:hint="@string/login_user_username_text"
        android:textColorHint="@color/primary_text_color"
        android:inputType="textNoSuggestions"
        android:textAppearance="@color/primary_text_color"
        android:textColor="@color/primary_text_color"
        android:textSize="18sp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/layout_login_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:hint="@string/login_user_password_text"
        android:textColorHint="@color/primary_text_color"
        android:inputType="textNoSuggestions|textPassword"
        android:textAppearance="@color/primary_text_color"
        android:textColor="@color/primary_text_color"
        android:textSize="18sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/layout_login_button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:text="@string/login_button_submit"
        android:textAlignment="center" />

</android.support.v7.widget.LinearLayoutCompat>
